{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appShortName__",
  "description": "__MSG_appDescription__",
  "version": "0.0.1",
  "manifest_version": 2,
  "default_locale": "en",
  "icons": {
    "16": "images/red-arrow-down.png",
    "128": "images/red-arrow-down.png"
  },
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/red-arrow-down.png",
      "38": "images/red-arrow-down.png"
    },
    "default_title": "__MSG_browserActionTitle__",
    "default_popup": "pages/popup.html"
  },
  "permissions": [
    "alarms",
    "activeTab",
    "cookies",
    "geolocation",
    "history",
    "notifications",
    "privacy",
    "proxy",
    "sessions",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ]
}
